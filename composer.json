{
    "name": "streams/streams",
    "description": "",
    "type": "project",
    "keywords": [
        "laravel",
        "control panel",
        "cmf"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Thompson",
            "email": "ryan@pyrocms.com"
        }
    ],
    "require": {
        "barryvdh/laravel-ide-helper": "^2.10",
        "blade-ui-kit/blade-heroicons": "^0.3",
        "owenvoke/blade-fontawesome": "^1.6",
        "blade-ui-kit/blade-icons": "^0.5",
        "maartenpaauw/undraw": "^1.0",
        "streams/core": "^2.0",
        "streams/api": "^1.0",
        "streams/ui": "^1.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.10",
        "barryvdh/laravel-debugbar": "^3.3",
        "spatie/laravel-web-tinker": "^1.7",
        "fzaninotto/faker": "^1.9",
        "facade/ignition": "^2.0",
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^9.0",
        "laravel/tinker": "^2.2",
        "streams/cli": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "exclude-from-classmap": [
            "vendor/erusev/parsedown-extra/test/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "dont-discover": [],
        "branch-alias": {
            "dev-master": "1.x-dev",
            "dev-develop": "1.1.x-dev"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "packages/streams/*",
            "options": {
                "symlink": true
            }
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "bin-dir": "bin",
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "reinstall": [
            "rm -rf vendor **/vendor composer.lock **/composer.lock",
            "composer update"
        ],
        "pre-autoload-dump": [
            "rm -Rf bootstrap/cache/*.php"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan clear --ansi",
            "@php artisan vendor:publish --ansi --tag=public",
            "@php artisan queue:restart --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php artisan web-tinker:install --ansi"
        ]
    }
}
